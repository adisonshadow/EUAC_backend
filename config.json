{
  "postgresql": {
    "host": "localhost",
    "port": 15432,
    "database": "UAC",
    "user": "yoyo",
    "password": "123456",
    "max_connections": 20,
    "idle_timeout": 30000,
    "connection_timeout": 2000,
    "ssl": false
  },
  "api": {
    "port": 3000,
    "host": "localhost",
    "cors": {
      "origin": ["http://localhost:3000", "http://localhost:8080"],
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH"],
      "allowedHeaders": ["Content-Type", "Authorization"],
      "credentials": true,
      "maxAge": 86400
    },
    "rateLimit": {
      "windowMs": 900000,
      "max": 100
    },
    "security": {
      "jwtSecret": "my-jwt-secret-key",
      "jwtExpiresIn": "24h",
      "bcryptSaltRounds": 10
    }
  },
  "logging": {
    "level": "info",
    "format": "json",
    "file": "logs/app.log",
    "rotation": {
      "maxSize": "20m",
      "maxFiles": "14d",
      "zippedArchive": true,
      "errorMaxFiles": "30d",
      "exceptionsMaxFiles": "30d",
      "rejectionsMaxFiles": "30d"
    }
  }
}